<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
    android:layout_marginTop="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="person_name"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/person_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="person_age"
                app:layout_constraintStart_toStartOf="@+id/person_name"
                app:layout_constraintTop_toBottomOf="@+id/person_name" />

            <TextView
                android:id="@+id/person_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="person_weight"
                app:layout_constraintStart_toStartOf="@+id/person_age"
                app:layout_constraintTop_toBottomOf="@+id/person_age" />

            <TextView
                android:id="@+id/person_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="person_gender"
                app:layout_constraintStart_toStartOf="@+id/person_weight"
                app:layout_constraintTop_toBottomOf="@+id/person_weight" />

            <TextView
                android:id="@+id/person_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Name: "
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/person_age_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Age: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/person_name_text"
                app:layout_constraintTop_toBottomOf="@+id/person_name_text" />

            <TextView
                android:id="@+id/person_gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Gender: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/person_age_text"
                app:layout_constraintTop_toBottomOf="@+id/person_age_text" />

            <TextView
                android:id="@+id/person_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Weight: "
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/person_gender_text"
                app:layout_constraintTop_toBottomOf="@+id/person_gender_text" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".5" />


        </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>

